# Server Configuration Example  
# Copy this file to .env.server and modify the values as needed

# Server Settings
PORT=5001
HOST=0.0.0.0

# Client Management
ALLOWED_CLIENTS=*
MAX_CLIENTS=10

# UI Display Configuration
SHOW_TABLE_CARDS=false
SHOW_POSITIONS=false
SHOW_MOVES=false
SHOW_SOLVER_LINK=true

